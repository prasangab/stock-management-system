{  
   "$schema":"http://json-schema.org/draft-04/schema#",
   "definitions":{  
      "positiveInteger":{  
         "type":"integer",
         "minimum":0
      },
      "locationType":{  
         "enum":[  
            "store",
            "storage"
         ]
      },
      "item":{  
         "type":"object",
         "properties":{  
            "ProductID":{  
               "type":"string"
            },
            "ProductName":{  
               "type":"string"
            },
            "Stock":{  
               "type":"object",
               "properties":{  
                  "Amount":{  
                     "$ref":"#/definitions/positiveInteger"
                  },
                  "Location":{  
                     "$ref":"#/definitions/locationType"
                  }
               },
               "required":[  
                  "Amount",
                  "Location"
               ]
            }
         },
         "required":[  
            "ProductID",
            "Stock"
         ]
      }
   },
   "type":"array",
   "minItems": 1,
   "items":{  
      "$ref":"#/definitions/item"
   }
}